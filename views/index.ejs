<%- include('partials/header'); -%>
<h1>INDEX PAGE!!!</h1>
<div class="ui main text container">
  <div class="ui huge header">RESTfull Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided item">
      <% blogs.forEach((blog)=>{ %>
      <div class="item">
        <div class="image">
          <img width="300px" class="" src="<%= blog.image%>" />
        </div>
        <div class="content">
          <a class="header" href="/blogs/<%= blog._id  %> ">
            <h2><%= blog.title%></h2></a
          >
          <div class="meta">
            <span> <%= blog.created.toDateString() %> </span>
          </div>
          <div class="description">
            <p><%= blog.body.substring(0,100) %>...</p>
          </div>
        </div>
        <div class="extra">
          <a
            class="ui violet button floated basic"
            href="/blogs/<%= blog._id  %> "
            >Read More <i class="right chevron icon"></i
          ></a>
        </div>
      </div>
    </div>
  </div>

  <%}) %> <%- include('partials/footer'); -%>
</div>
